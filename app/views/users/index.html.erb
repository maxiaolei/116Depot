<%= stylesheet_link_tag "table"%>

<h1><%= t('.title')%></h1>
<% if notice %>
<p id="notice"><%=notice%></p>
<% end %>

<div class="table">
<table>
  <tr>
    <th width="20%" align="center"><%= t('.name')%></th>
    <th width="20%" align="center">Type</th>
    <th colspan=3>Operation</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td align="center"><%= user.name %></td>
    <td align="center"><%= user.usertype%></td>
    <td><%= link_to t('.show'), user %></td>
    <td><%= link_to t('.edit'), edit_user_path(user) %></td>
    <td><%= link_to t('.destroy'), user, :confirm => t('.sure'), :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>

<br />

<%= link_to t('.new'), new_user_path %>
<p><%= will_paginate @users %></p>
