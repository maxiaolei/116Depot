<%if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<p>
  <b><%= t('.product_show_title') +":"%></b>
  <%= @product.title %>
</p>

<p>
  <b><%= t('.product_show_category') +":"%></b>
  <%= @product.category %>
</p>

<p>
  <b><%= t('.product_show_author') +":"%></b>
  <%= @product.author %>
</p>
<p>
  <b><%= t('.product_show_sold') +":"%></b>
  <%= @product.sold %>
</p>
<%= javascript_tag "var product_level="+@product.level.to_s+";" %>
<% if @star %>
<span id="star_edit" class="stars"><b><%= t('.level')+": " %></b>
</span><br /><input id="addstar" type="button" value="submit" onclick="<%= remote_function(:url=>{:action=>:add_star_level,:id=>@product.id},
:before=>"$.fn.raty.readOnly(true,'star_edit')",
:complete=>"$('#addstar').hide();",
:with=>"'score='+document.getElementById('star_edit-score').value") %>" />
<% else %>
<span id="star_read" class="stars"><b><%= t('.level')+": " %></b></span><br />
<% end %>
<p>
  <b><%= t('.product_show_description') + ":"%></b>
  <%= sanitize(@product.description) %>
</p>
<p>
<% if @product.pdf == 'lack' %>
   <b>Try Reading: lack</b>
<% else %>
   <%= link_to t('.Try Reading'),@product.pdf %></br>
<% end %>
</p>
<p>
	<img src="<%= @product.image_url %>" alt="<%=@product.title %>" />
</p>
<p>
  <b><%= t('.product_show_price') + ":" %></b>
  <%= number_to_currency(@product.price) %>
  <%= button_to 'Add To Cart', line_items_path(:product_id => @product.id),
        :remote => true %>
</p>

<% if session[:user_type] == 1%>
<%= link_to t('.product_show_edit'), edit_product_path(@product) %> |
<%= link_to t('.product_show_back'), products_path %>
<% end %>

<br /><br />
<% unless @product.comments.blank? %>
<h3>Comments About The Product:</h3>
<% puts @product.comments %>
  <% @product.comments.each do  |comment|%>
  <div class="<%= cycle('comment_odd','comment_even') %>">
    <span style='font: 120% bold'><%= comment.user.name %></span>:
    <p>
    	<%= comment.content %>
    </p>
   </div>
  <% end %>
<% end %>

<% if session[:user_id]%>
<%= form_tag({:action => :add_comment, :id => @product.id }) do%>
  <%= text_area_tag(:user_comment,nil, :cols => 80, :rows => 3)%><br/>
  <%= submit_tag 'Add Comment'%>
<% end %>
<% end %>
<% javascript_tag "document.getElementById('star_edit-score').onchange()="+remote_function(:url=>{:action=>:add_star_level,:id=>@product.id},
:complete=>"$.fn.raty.readOnly(true,'star_edit')",
:with=>"'score='+encodeURIComponent(document.getElementById('star_edit-score').value)")+";"%>



